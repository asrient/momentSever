<html>
<title>Duchess of Duckland</title>

<body>
    <div id="f">
        <div id="f2">😑</div>
        <div id="f0">Rogue server</div>
        <div id="f1">GO AWAY!</div>
    </div>
</body>

</html>
<style>
    #f {
        position: fixed;
        top: 0px;
        left: 0px;
        height: 100vh;
        width: 100vw;
        color: rgba(0, 0, 0, 1);
        font-size: 8rem;
        font-weight: 100;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
    }
    #f0{
        text-shadow: 8px 7px 13px rgba(0, 0, 0, 0.384);
    }
    #f0:hover{
        color: rgba(0, 0, 0, 1);
    }
    #f1 {
        padding-top: 5rem;
        color: rgb(112, 112, 112);
        font-size: 2rem;
    }
    #f2 {
        padding-bottom: 2rem;
        color: rgb(112, 112, 112);
        font-size: 5rem;
    }
</style>

<script>
    var colors = [255, 155, 0];
    var dirs = [0, 1, 1];
    var emojis=['😊','😂','🤣','😍','😒','😘','😁','😜','😢','😎','😉','💋','😃','👀','😆','🤔','🤢','🥱','😛','😝','🤑','🙁','😤','😔','🥱','🙄','🙁']
    window.setInterval(() => {
        var rand=Math.floor(Math.random(emojis.length)*10);
        document.getElementById("f2").innerHTML=emojis[rand];
        document.getElementById("f").style.background = "linear-gradient(120deg,rgb(" + colors[0] + ',' + colors[1] + ',' + colors[2] + "),rgb(" + colors[1] + ',' + colors[0] + ',' + colors[2] + ")";
        colors.forEach((color, ind) => {
            if (dirs[ind]) {
                if (color > 255) {
                    dirs[ind] = 0;
                }
                else {
                    colors[ind] += 1;
                }
            }
            else {
                if (color < 0) {
                    dirs[ind] = 1;
                }
                else {
                    colors[ind] -= 1;
                }
            }
        })
    }, 200);
    var light=true;
    window.setInterval(()=>{
        if(light){
            document.getElementById('f0').style.color='rgba(0,0,0,0)';
            light=false;
        }
      else{
        document.getElementById('f0').style.color='rgba(0,0,0,1)';
        light=true;
      }
    },500)
</script>